<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="it.unina.foodlab.controller.AssociaRicetteController"
      fx:id="root"
      spacing="14" fillWidth="true"
      style="-fx-background-color: transparent; -fx-font-family: 'Segoe UI', Inter, system-ui; -fx-font-size: 13px;">

    <!-- Top bar -->
    <HBox spacing="10" alignment="CENTER_LEFT"
          style="-fx-background-color: #2e3440; -fx-background-radius: 8; -fx-padding: 10;">
        <children>
            <Label text="Filtro:" style="-fx-text-fill: #eceff4; -fx-font-weight: bold;"/>
            <TextField fx:id="txtSearch" promptText="Cerca per nome o descrizione…"
                       style="-fx-background-color: #3b4252; -fx-text-fill: #eceff4; -fx-prompt-text-fill: rgba(236,239,244,0.65);
                              -fx-background-radius: 6; -fx-border-color: transparent; -fx-padding: 8 10;"/>

            <Label text="Difficoltà:" style="-fx-text-fill: #eceff4; -fx-font-weight: bold;"/>
            <ChoiceBox fx:id="chDifficolta"
                       style="-fx-background-color: #3b4252; -fx-mark-color: #eceff4; -fx-background-radius: 6;
                              -fx-text-fill: #eceff4; -fx-padding: 6 8;"/>

            <Region fx:id="topBarSpacer" HBox.hgrow="ALWAYS"/>

            <Button fx:id="btnSelAll" text="Tutte"
                    style="-fx-background-color: #5e81ac; -fx-text-fill: #eceff4; -fx-background-radius: 6;
                           -fx-font-weight: bold; -fx-padding: 8 12;"/>
            <Button fx:id="btnSelNone" text="Nessuna"
                    style="-fx-background-color: #4c566a; -fx-text-fill: #eceff4; -fx-background-radius: 6;
                           -fx-font-weight: bold; -fx-padding: 8 12;"/>
        </children>
    </HBox>

    <TableView fx:id="table" VBox.vgrow="ALWAYS"
               style="-fx-background-color: #2e3440; -fx-control-inner-background: #2e3440; -fx-text-background-color: #eceff4;
                      -fx-background-insets: 0; -fx-padding: 8; -fx-border-color: #3b4252; -fx-border-radius: 8; -fx-background-radius: 8;">
        <columns>
            <TableColumn fx:id="colChk" text="✓" prefWidth="60" style="-fx-alignment: CENTER;"/>
            <TableColumn fx:id="colNome" text="Nome"/>
            <TableColumn fx:id="colDiff" text="Difficoltà" prefWidth="120"/>
            <TableColumn fx:id="colTempo" text="Tempo prep. (min)" prefWidth="150" style="-fx-alignment: CENTER-RIGHT;"/>
            <TableColumn fx:id="colDesc" text="Descrizione"/>
        </columns>
        <placeholder>
            <Label text="Nessuna ricetta trovata."
                   style="-fx-text-fill: rgba(236,239,244,0.85); -fx-padding: 12;"/>
        </placeholder>
    </TableView>

    <padding><Insets top="12" right="12" bottom="12" left="12"/></padding>
</VBox>
