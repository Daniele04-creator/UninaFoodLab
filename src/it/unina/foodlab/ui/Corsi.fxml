<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>

<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="it.unina.foodlab.controller.CorsiPanelController"
            prefWidth="1000" prefHeight="640" fx:id="mainPane">

    <!-- ============== SIDEBAR SINISTRA ============== -->
    <left>
        <VBox spacing="8" styleClass="sidebar" BorderPane.alignment="CENTER">
            <children>
                <Separator />
                <Button fx:id="btnReport" maxWidth="Infinity"
                		prefWidth="120" prefHeight="40"
       					minWidth="120" minHeight="40"
                        style="-fx-padding: 100 200 100 200; -fx-graphic: url('/icons/pie-chart-16.png'); -fx-content-display: graphic-only;"/>
            </children>
            <padding>
                <Insets top="12" right="12" bottom="12" left="12"/>
            </padding>
        </VBox>
    </left>

    <!-- ============== TOP BAR ============== -->
    <top>
        <HBox spacing="10" alignment="CENTER_LEFT" BorderPane.alignment="CENTER">
            <children>
                <ImageView fitHeight="52" preserveRatio="true">
				    <image>
				        <Image url="@/icons/Corsi-Logo.png"/>
				    </image>
				</ImageView>
                <Region HBox.hgrow="ALWAYS"/>

                <!-- Menu Filtri -->
                <MenuButton fx:id="btnFilters"
                            style="-fx-graphic: url('/icons/filled-filter-16.png'); -fx-content-display: graphic-only;">
                    <tooltip><Tooltip text="Filtri disponibili"/></tooltip>
                    <items>

                        <!-- Header + pulisci -->
                        <CustomMenuItem hideOnClick="false">
                            <content>
                                <HBox spacing="8" alignment="CENTER_RIGHT" styleClass="filters-header">
                                    <children>
                                        <Label text="Filtri" styleClass="h3"/>
                                        <Pane HBox.hgrow="ALWAYS"/>
                                        <Button fx:id="btnClearInMenu" mnemonicParsing="false"
                                                style="-fx-graphic: url('/icons/cancel-16.png'); -fx-content-display: graphic-only;">
                                            <tooltip><Tooltip text="Pulisci filtri"/></tooltip>
                                        </Button>
                                    </children>
                                </HBox>
                            </content>
                        </CustomMenuItem>

                        <SeparatorMenuItem/>

                        <MenuItem fx:id="miFiltroArg"  text="Argomento"/>
                        <MenuItem fx:id="miFiltroFreq" text="Frequenza"/>
                        <MenuItem fx:id="miFiltroChef" text="Chef"/>
                        <MenuItem fx:id="miFiltroId"   text="ID"/>

                        <SeparatorMenuItem/>

                        <!-- Intervallo date -->
                        <CustomMenuItem hideOnClick="false">
                            <content>
                                <HBox spacing="6" alignment="CENTER_LEFT">
                                    <children>
                                        <Label text="Dal:"/>
                                        <DatePicker fx:id="dpFrom" showWeekNumbers="false"/>
                                        <Label text="al:"/>
                                        <DatePicker fx:id="dpTo" showWeekNumbers="false"/>
                                        <!-- Applica icona-only -->
                                        <Button fx:id="btnApplyDate" mnemonicParsing="false"
                                                style="-fx-graphic: url('/icons/ok-16.png'); -fx-content-display: graphic-only;">
                                            <tooltip><Tooltip text="Applica intervallo"/></tooltip>
                                        </Button>
                                    </children>
                                </HBox>
                            </content>
                        </CustomMenuItem>
                    </items>
                </MenuButton>

                <Button fx:id="btnRefresh"
                        style="-fx-graphic: url('/icons/refresh-2-16.png'); -fx-content-display: graphic-only;">
                    <tooltip><Tooltip text="Aggiorna"/></tooltip>
                </Button>
            </children>
            <padding>
                <Insets top="12" right="12" bottom="12" left="12"/>
            </padding>
        </HBox>
    </top>

    <!-- ============== TABELLA CENTRALE ============== -->
    <center>
        <HBox BorderPane.alignment="CENTER" spacing="0">
            <children>
                <TableView fx:id="table" HBox.hgrow="ALWAYS">
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                    </columnResizePolicy>

                    <columns>
                        <TableColumn fx:id="colId" text="ID" prefWidth="80" style="-fx-alignment: CENTER_LEFT;"/>
                        <TableColumn fx:id="colArg" text="Argomento" prefWidth="220" style="-fx-alignment: CENTER_LEFT;"/>
                        <TableColumn fx:id="colFreq" text="Frequenza" prefWidth="120" style="-fx-alignment: CENTER_LEFT;"/>
                        <TableColumn fx:id="colInizio" text="Inizio" prefWidth="110" style="-fx-alignment: CENTER_LEFT;"/>
                        <TableColumn fx:id="colFine" text="Fine" prefWidth="110" style="-fx-alignment: CENTER_LEFT;"/>
                        <TableColumn fx:id="colChef" text="Chef" prefWidth="200" style="-fx-alignment: CENTER_LEFT;"/>
                    </columns>

                    <placeholder>
                        <Label text="Nessun corso trovato."/>
                    </placeholder>
                </TableView>
            </children>
            <padding>
                <Insets top="0" right="20" bottom="0" left="0"/>
            </padding>
        </HBox>
    </center>

    <!-- ============== BOTTOM BAR CRUD ============== -->
    <bottom>
        <HBox spacing="10" alignment="CENTER_RIGHT">
            <children>
                <Button fx:id="btnNew"
                        styleClass="add-button"
                        prefWidth="120" prefHeight="40"
       					minWidth="120" minHeight="40"
                        style="-fx-padding: 100 200 100 200; -fx-graphic: url('/icons/plus-16.png'); -fx-content-display: graphic-only;">
                    <tooltip><Tooltip text="Nuovo"/></tooltip>
                </Button>

                <Button fx:id="btnEdit" disable="true"
               			prefWidth="120" prefHeight="40"
       					minWidth="120" minHeight="40"
                        style="-fx-padding: 100 200 100 200; -fx-graphic: url('/icons/edit-2-16.png'); -fx-content-display: graphic-only;">
                    <tooltip><Tooltip text="Modifica"/></tooltip>
                </Button>

                <Button fx:id="btnAssocRicette" disable="true"
                		prefWidth="120" prefHeight="40"
       					minWidth="120" minHeight="40"
                        style="-fx-padding: 100 200 100 200; -fx-graphic: url('/icons/bill-16.png'); -fx-content-display: graphic-only;">
                    <tooltip><Tooltip text="Associa ricette"/></tooltip>
                </Button>

                <Button fx:id="btnDelete" disable="true"
                		prefWidth="120" prefHeight="40"
       					minWidth="120" minHeight="40"
                        style="-fx-padding: 100 200 100 200; -fx-graphic: url('/icons/trash-2-16.png'); -fx-content-display: graphic-only;">
                    <tooltip><Tooltip text="Elimina"/></tooltip>
                </Button>
            </children>
            <padding>
                <Insets top="12" right="12" bottom="12" left="12"/>
            </padding>
        </HBox>
    </bottom>

</BorderPane>
