<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.SVGPath?>

<BorderPane fx:id="outer"
            xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="it.unina.foodlab.controller.LoginController"
            prefWidth="1080" prefHeight="680"
            style="-fx-font-family:'Segoe UI', Inter, system-ui; -fx-font-size:14px;
                   -fx-background-color: linear-gradient(to bottom,#0e1114,#0b1014);">

    
    <left>
        <VBox spacing="18" BorderPane.alignment="CENTER"
              style="-fx-background-color: linear-gradient(to bottom,#1b2427,#152022); -fx-background-radius:0 18 18 0; -fx-padding:28;">
            <children>
                
                <ImageView fitHeight="90" preserveRatio="true">
                    <image><Image url="@/icons/LogoLogin.png"/></image>
                </ImageView>


                <Label text="Gestione corsi per Chef"
                       style="-fx-text-fill: rgba(255,255,255,0.80); -fx-font-size:14px; -fx-padding:0 0 8 0;"/>

                
                <Region prefHeight="2" maxHeight="2" style="-fx-background-color:#f0b766; -fx-background-radius:2;"/>
                <Label text="• Programma corsi e sessioni con pochi click"
                       style="-fx-text-fill:#e9f5ec; -fx-font-size:13px;"/>
                <Label text="• Fai tutto in una sola schermata"
                       style="-fx-text-fill:#e9f5ec; -fx-font-size:13px;"/>
                <Label text="• Statistiche chiare e rilevanti"
                       style="-fx-text-fill:#e9f5ec; -fx-font-size:13px;"/>

                <Region VBox.vgrow="ALWAYS"/>
                
                <Label text="Area Chef" style="-fx-text-fill:#9fb6aa; -fx-font-size:12px;"/>
            </children>
        </VBox>
    </left>

    
    <center>
        <StackPane style="-fx-padding: 32;">
            <children>
                <VBox fx:id="card" alignment="CENTER" spacing="18" maxWidth="520"
                      style="-fx-background-color: linear-gradient(to bottom,#242c2f,#20282b);
                             -fx-background-radius:18; -fx-border-radius:18;
                             -fx-border-color: rgba(255,255,255,0.06); -fx-border-width:1;
                             -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.55), 28, 0.0, 0, 8);">
                    <padding><Insets top="30" right="34" bottom="30" left="34"/></padding>

                    <children>
                        
                        <Label text="Benvenuto Chef"
                               style="-fx-text-fill:#e9f5ec; -fx-font-size:18px; -fx-font-weight:700; -fx-padding:0 0 4 0;"/>
                        <Label text="Accedi per gestire corsi, sessioni e ricette"
                               style="-fx-text-fill: rgba(255,255,255,0.78); -fx-font-size:12px; -fx-padding:0 0 6 0;"/>

                        <VBox spacing="14" fillWidth="true" alignment="CENTER">
                            <children>

                                
                                <HBox alignment="CENTER_LEFT" spacing="10"
                                      style="-fx-background-color: rgba(255,255,255,0.06);
                                             -fx-border-color: rgba(255,255,255,0.10);
                                             -fx-background-radius:12; -fx-border-radius:12;">
                                    <padding><Insets top="10" right="10" bottom="10" left="10"/></padding>
                                    <children>
                                        <StackPane minHeight="28" minWidth="28" maxHeight="28" maxWidth="28">
                                            <SVGPath fill="#cfd7d2"
                                                     content="M12 12c2.761 0 5-2.239 5-5S14.761 2 12 2 7 4.239 7 7s2.239 5 5 5zm0 2c-3.866 0-7 3.134-7 7h2c0-2.761 2.239-5 5-5s5 2.239 5 5h2c0-3.866-3.134-7-7-7z"/>
                                        </StackPane>
                                        <TextField fx:id="usernameField" promptText="Username" HBox.hgrow="ALWAYS"
                                                   style="-fx-background-color: transparent; -fx-text-fill:#f0f4f6;
                                                          -fx-prompt-text-fill: rgba(255,255,255,0.60);
                                                          -fx-border-color: transparent;"/>
                                    </children>
                                </HBox>

                               
                                <HBox alignment="CENTER_LEFT" spacing="10"
                                      style="-fx-background-color: rgba(255,255,255,0.06);
                                             -fx-border-color: rgba(255,255,255,0.10);
                                             -fx-background-radius:12; -fx-border-radius:12;">
                                    <padding><Insets top="10" right="10" bottom="10" left="10"/></padding>
                                    <children>
                                        <StackPane minHeight="28" minWidth="28" maxHeight="28" maxWidth="28">
                                            <SVGPath fill="#cfd7d2"
                                                     content="M6 8V6a6 6 0 1 1 12 0v2h1a1 1 0 0 1 1 1v10a1 1 0 0 1-1 1H5a1 1 0 0 1-1-1V9a1 1 0 0 1 1-1h1zm2 0h8V6a4 4 0 0 0-8 0v2z"/>
                                        </StackPane>

                                        
                                        <StackPane HBox.hgrow="ALWAYS">
                                            <PasswordField fx:id="passwordField" promptText="Password"
                                                           StackPane.alignment="CENTER_LEFT"
                                                           style="-fx-background-color: transparent; -fx-text-fill:#f0f4f6;
                                                                  -fx-prompt-text-fill: rgba(255,255,255,0.60);
                                                                  -fx-border-color: transparent;"/>
                                            <TextField fx:id="passwordVisibleField" promptText="Password"
                                                       visible="false" managed="false"
                                                       StackPane.alignment="CENTER_LEFT"
                                                       style="-fx-background-color: transparent; -fx-text-fill:#f0f4f6;
                                                              -fx-prompt-text-fill: rgba(255,255,255,0.60);
                                                              -fx-border-color: transparent;"/>
                                        </StackPane>

                                        <Region HBox.hgrow="ALWAYS"/>

                                        
                                        <ToggleButton fx:id="toggleVisibilityButton"
                                                      contentDisplay="GRAPHIC_ONLY" focusTraversable="false"
                                                      style="-fx-background-color: transparent; -fx-border-color: transparent; -fx-padding:0 6 0 6;">
                                            <cursor><Cursor fx:constant="HAND"/></cursor>
                                            <graphic>
                                                
                                                <SVGPath fx:id="eyeIcon" fill="#e8efe9" scaleX="1.0" scaleY="1.0"
                                                         content="M2 5l19 14-1.5 2L.5 7 2 5zm3.3 2.4C7.7 6.2 9.7 5 12 5c7 0 11 7 11 7-.7 1.1-1.7 2.3-3 3.3L18.6 13c.3-.6.4-1.2.4-1.9a5 5 0 0 0-5-5c-.7 0-1.3.1-1.9.4L5.3 7.4z"/>
                                            </graphic>
                                            <tooltip><Tooltip text="Mostra/Nascondi password"/></tooltip>
                                        </ToggleButton>
                                    </children>
                                </HBox>

                                
                                <Label fx:id="errorLabel" managed="false" visible="false"
                                       style="-fx-text-fill:#ffd0cc; -fx-background-color: rgba(240,152,141,0.14);
                                              -fx-padding:8 12; -fx-background-radius:10;"/>

                                
                                <HBox spacing="12" alignment="CENTER">
                                    <children>
                                        <StackPane alignment="CENTER">
                                            <children>
                                                <Button fx:id="loginButton" text="Login" defaultButton="true"
                                                        style="-fx-background-color:#1fb57a; -fx-text-fill:#0a1410; -fx-font-weight:800;
                                                               -fx-padding:11 22; -fx-background-radius:12; -fx-border-radius:12;
                                                               -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.28), 10,0,0,2);"
                                                        prefWidth="170" prefHeight="46"/>
                                                <ProgressIndicator fx:id="spinner" maxHeight="18" maxWidth="18"
                                                                   visible="false" managed="false"
                                                                   StackPane.alignment="CENTER_RIGHT">
                                                    <StackPane.margin><Insets right="12"/></StackPane.margin>
                                                </ProgressIndicator>
                                            </children>
                                        </StackPane>

                                        <Button fx:id="registerButton" text="Registrati"
                                                style="-fx-background-color:#f0b766; -fx-text-fill:#231a10; -fx-font-weight:800;
                                                       -fx-padding:11 22; -fx-background-radius:12; -fx-border-radius:12;
                                                       -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.28), 10,0,0,2);"
                                                prefWidth="170" prefHeight="46"/>
                                    </children>
                                </HBox>
                            </children>
                        </VBox>
                    </children>
                </VBox>
            </children>
        </StackPane>
    </center>
</BorderPane>
