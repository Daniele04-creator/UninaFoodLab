<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>

<BorderPane fx:id="root"
            xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="it.unina.foodlab.controller.ReportController"
            prefWidth="1000.0" prefHeight="600.0"
            style="-fx-background-color: linear-gradient(to bottom,#0e1114,#0b1014);
                   -fx-font-family:'Segoe UI', Inter, system-ui; -fx-font-size:13px;">
    <padding>
        <Insets top="12" right="12" bottom="12" left="12"/>
    </padding>

    <!-- TOP -->
    <top>
        <VBox spacing="8" alignment="CENTER_LEFT"
              style="-fx-background-color: linear-gradient(to bottom,#1b2427,#152022);
                     -fx-background-radius:12; -fx-padding:12;">
            <children>
                <HBox spacing="8" alignment="CENTER_LEFT">
                    <children>
                        <Button fx:id="btnIndietro"
                                style="-fx-background-color:#2b3438; -fx-text-fill:#e9f5ec; -fx-background-radius:10;
                                       -fx-graphic: url('/icons/arrow-88-16.png'); -fx-content-display: graphic-only; -fx-padding:8 10;"/>
                        <ImageView fitHeight="46" preserveRatio="true">
                            <image><Image url="@/icons/Report-Logo.png"/></image>
                        </ImageView>
                    </children>
                </HBox>

                <HBox spacing="10" alignment="CENTER_LEFT">
                    <children>
                        <Label text="Scegli una data del mese:"
                               style="-fx-text-fill:#e9f5ec; -fx-font-weight:700;"/>
                        <DatePicker fx:id="dpMese" showWeekNumbers="false"
                                    style="-fx-background-color:#2b3438; -fx-background-radius:10;
                                           -fx-text-fill:#e9f5ec; -fx-prompt-text-fill: rgba(233,245,236,0.70);
                                           -fx-border-color: rgba(255,255,255,0.06); -fx-border-radius:10;"/>
                        <Button fx:id="btnGenera" text="Crea"
                                style="-fx-background-color:#1fb57a; -fx-text-fill:#0a1410; -fx-font-weight:800;
                                       -fx-background-radius:10; -fx-padding:8 14;"/>
                    </children>
                </HBox>
            </children>
        </VBox>
    </top>

    <!-- CENTER: titolo + card riepilogo -->
    <center>
        <VBox spacing="12" fillWidth="true">
            <children>
                <Label fx:id="lblTitolo" text="Report Mensile"
                       style="-fx-text-fill:#e9f5ec; -fx-font-weight:800; -fx-font-size:18px;"/>
                <Separator style="-fx-background-color: rgba(255,255,255,0.06); -fx-opacity:1;"/>

                <VBox fx:id="cardValori" fillWidth="true"
                      style="-fx-background-color: linear-gradient(to bottom,#242c2f,#20282b);
                             -fx-background-radius:12; -fx-border-color: rgba(255,255,255,0.06);
                             -fx-border-radius:12; -fx-padding:16;">
                    <children>
                        <GridPane fx:id="gridValori" hgap="16" vgap="10">
                            <padding><Insets top="6" right="6" bottom="6" left="6"/></padding>
                            <!-- Righe aggiunte da controller -->
                        </GridPane>
                    </children>
                </VBox>
            </children>
        </VBox>
    </center>

    <!-- RIGHT: grafici -->
    <right>
        <ScrollPane fitToWidth="true" fitToHeight="true" hbarPolicy="NEVER" prefWidth="540.0"
                    style="-fx-background-color: transparent; -fx-background-insets:0;">
            <content>
                <VBox fx:id="rightCharts" spacing="12" fillWidth="true"
                      style="-fx-padding:8;"/>
            </content>
        </ScrollPane>
    </right>
</BorderPane>
