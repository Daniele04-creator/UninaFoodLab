<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>

<DialogPane xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="it.unina.foodlab.controller.SessioniPreviewController"
            fx:id="dialogPane"
            prefWidth="760" prefHeight="560"
            style="-fx-background-color:#2e3440; -fx-font-family:'Segoe UI', Inter, system-ui; -fx-font-size:13px;">

    <header>
        <HBox spacing="12" style="-fx-padding: 8 10;">
            <children>
                <ImageView fitHeight="20" fitWidth="20" pickOnBounds="true" preserveRatio="true">
                    <image><Image url="@/icons/calendar-16.png"/></image>
                </ImageView>
                <Label fx:id="lblHeader" style="-fx-text-fill:#eceff4; -fx-font-weight:bold; -fx-font-size:14px;"/>
            </children>
        </HBox>
    </header>

    <content>
        <VBox spacing="14">
            <padding><Insets top="8" right="8" bottom="8" left="8"/></padding>

            <!-- Filtri -->
            <HBox spacing="8">
                <children>
                    <ToggleButton fx:id="tgAll" text="Tutte" selected="true"
                                  style="-fx-background-color:#3b4252; -fx-background-radius:6; -fx-text-fill:#eceff4; -fx-padding:6 10;"/>
                    <ToggleButton fx:id="tgOnline" text="Online"
                                  style="-fx-background-color:#3b4252; -fx-background-radius:6; -fx-text-fill:#eceff4; -fx-padding:6 10;"/>
                    <ToggleButton fx:id="tgPresenza" text="In presenza"
                                  style="-fx-background-color:#3b4252; -fx-background-radius:6; -fx-text-fill:#eceff4; -fx-padding:6 10;"/>
                    <Region HBox.hgrow="ALWAYS"/>
                    <TextField fx:id="txtSearch" promptText="Cerca (piattaforma, via, aula, data)"
                               style="-fx-background-color:#3b4252; -fx-text-fill:#eceff4; -fx-prompt-text-fill:rgba(236,239,244,0.65);
                                      -fx-background-radius:6; -fx-border-color: transparent; -fx-padding: 8 10;"/>
                </children>
            </HBox>

            <!-- Lista -->
            <ListView fx:id="lv" prefHeight="480"
                      style="-fx-background-color:#2e3440; -fx-control-inner-background:#2e3440; -fx-text-background-color:#eceff4;">
                <VBox.vgrow><Priority fx:constant="ALWAYS"/></VBox.vgrow>
            </ListView>
        </VBox>
    </content>

    <buttonTypes>
        <ButtonType text="Chiudi" buttonData="CANCEL_CLOSE"/>
    </buttonTypes>
</DialogPane>
