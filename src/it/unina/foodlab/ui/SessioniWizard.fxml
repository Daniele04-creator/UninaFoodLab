<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<DialogPane xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="it.unina.foodlab.controller.SessioniWizardController"
            fx:id="dialogPane"
            prefWidth="1000" prefHeight="650"
            style="-fx-background-color:#2e3440; -fx-font-family:'Segoe UI', Inter, system-ui; -fx-font-size:13px;">

    <buttonTypes>
        <ButtonType text="Annulla"  buttonData="CANCEL_CLOSE" fx:id="cancelButtonType"/>
        <ButtonType text="Conferma" buttonData="OK_DONE"      fx:id="okButtonType"/>
    </buttonTypes>

    <content>
        <VBox spacing="10">
            <padding><Insets top="12" right="12" bottom="12" left="12"/></padding>

            <Label text="Imposta modalità e dettagli per ciascuna sessione:"
                   style="-fx-text-fill:#eceff4; -fx-font-weight:bold;"/>

            <TableView fx:id="table" editable="true" prefHeight="-1.0" maxHeight="Infinity"
                       style="-fx-background-color:#2e3440; -fx-control-inner-background:#2e3440; -fx-text-background-color:#eceff4;
                              -fx-border-color:#3b4252; -fx-border-radius:8; -fx-background-radius:8;">
                <VBox.vgrow><Priority fx:constant="ALWAYS"/></VBox.vgrow>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY_FLEX_LAST_COLUMN"/>
                </columnResizePolicy>

                <columns>
                    <TableColumn fx:id="cData"        text="Data"         prefWidth="130" minWidth="130"/>
                    <TableColumn fx:id="cInizio"      text="Inizio"       prefWidth="140" minWidth="140"/>
                    <TableColumn fx:id="cFine"        text="Fine"         prefWidth="140" minWidth="140"/>
                    <TableColumn fx:id="cTipo"        text="Modalità"     prefWidth="160" minWidth="160"/>
                    <TableColumn fx:id="cPiattaforma" text="Piattaforma"  prefWidth="180" minWidth="180"/>
                    <TableColumn fx:id="cVia"         text="Via"          prefWidth="200" minWidth="200"/>
                    <TableColumn fx:id="cNum"         text="Num"          prefWidth="80"  minWidth="80"/>
                    <TableColumn fx:id="cCap"         text="CAP"          prefWidth="110" minWidth="110"/>
                    <TableColumn fx:id="cAula"        text="Aula"         prefWidth="120" minWidth="120"/>
                    <TableColumn fx:id="cPosti"       text="Posti"        prefWidth="100" minWidth="100"/>
                </columns>

                <placeholder>
                    <Label text="Nessuna sessione. Usa 'Nuovo' per creare una riga."
                           style="-fx-text-fill: rgba(236,239,244,0.85);"/>
                </placeholder>
            </TableView>

            <!-- Barra comandi -->
            <HBox spacing="10" alignment="CENTER" style="-fx-padding: 4 0 0 0;">
                <children>
                    <Button fx:id="btnAdd" text="Nuovo"
                            style="-fx-background-color:#5e81ac; -fx-text-fill:#eceff4; -fx-background-radius:6; -fx-padding:8 12;
                                   -fx-graphic: url('/icons/plus-16.png'); -fx-content-display: left;">
                        <tooltip><Tooltip text="Nuovo"/></tooltip>
                        <graphicTextGap>8</graphicTextGap>
                    </Button>
                    <Button fx:id="btnRemove" text="Rimuovi"
                            style="-fx-background-color:#d46a6a; -fx-text-fill:#fff; -fx-background-radius:6; -fx-padding:8 12;
                                   -fx-graphic: url('/icons/trash-2-16.png'); -fx-content-display: left;">
                        <tooltip><Tooltip text="Rimuovi"/></tooltip>
                        <graphicTextGap>8</graphicTextGap>
                    </Button>
                </children>
            </HBox>
        </VBox>
    </content>
</DialogPane>
